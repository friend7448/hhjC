// insert
function doInsert()
{
	if(!IUDcheckValue()) return;
	
	var actionData = '${entity.databaseTable}.doInsert';
	var url = '../${entity.name}/${entity.name}.do';
	var uid = 'I';
	
	IUDdoFormSubmit(actionData, url, uid);
}

// update
function doUpdate()
{	
	if(!IUDcheckValue()) return;
	
	var actionData = '${entity.databaseTable}.doUpdate';
	var url = '../${entity.name}/${entity.name}.do';
	var uid = 'U';
	
	IUDdoFormSubmit(actionData, url, uid);
}

// delete
function doDelete()
{
	var actionData = '${entity.databaseTable}.doDelete';
	var url = '../${entity.name}/${entity.name}.do';
	var uid = 'D';
	
	IUDdoFormSubmit(actionData, url, uid);
}

//close
function doClose()
{
	document.frm.action = '../${entity.name}/${entity.name}.do';
	document.frm.submit();  
}