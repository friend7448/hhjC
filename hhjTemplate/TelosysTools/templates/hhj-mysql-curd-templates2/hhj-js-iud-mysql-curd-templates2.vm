// button binding
function btnBind()
{
	$("#btn_close").bind("click",doClose);		
	$("#btn_insert").bind("click",doInsert);    
	$("#btn_update").bind("click",doUpdate);    
	$("#btn_delete").bind("click",doDelete);   
}

